  <div class="channel-item4">
    <a href="/teams" class="btn btn-default btn-sm active" role="button">My Channels</a>
  </div>
  <div class="channel-item5">
    <p class="four">views/channels/root/show.html.erb</p>   <!-- YOU ARE HERE -->
  </div>

</div> <!-- close the button container directly above -->


</div> <!-- close container bg -->
